<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fifa_mode_2"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >


            <TextView
                android:id="@+id/match_team_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:background="#FFFDE7"
                android:elevation="10dp"
                android:gravity="center"
                android:text="team 1"
                />

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:background="#FFFDE7"
                android:elevation="10dp"
                >

                <LinearLayout
                    android:id="@+id/container_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/user_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingStart="5dp"
                        android:text="GamerTag"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/consoleType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="100dp"

                        />



                </LinearLayout>

                <!--
                <circle.CircularImageView
                    android:id="@+id/imgage_one"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>

                    -->

                <RelativeLayout
                    android:id="@+id/sub_container_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/skill_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF4081"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="60dp"
                        android:fontFamily="sans-serif"
                        android:text="Skill Rating"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        tools:ignore="RtlSymmetry" />


                    <RelativeLayout
                        android:id="@+id/sub_container_two"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20sp"
                        android:background="#000000"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="DIV"
                            android:textSize="10sp"
                            android:textColor="#ffffff"

                            />

                        <TextView
                            android:id="@+id/div"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="05"
                            android:textSize="30sp"
                            android:textColor="#ffffff"

                            />




                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <circle.CircularImageView
                    android:id="@+id/imgage_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF4081"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="$5.0"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        />

                    <TextView
                        android:id="@+id/confirm_match"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ACCEPT"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:background="#FF4081"
                        />


                </LinearLayout>

                <circle.CircularImageView
                    android:id="@+id/imgage_two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF4081"/>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/container_two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:background="#FFFDE7"
                android:elevation="10dp"
                android:layout_below="@id/container"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >



                    <ImageView
                        android:id="@+id/consoleTypeII"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="100dp"

                        />

                    <TextView
                        android:id="@+id/user_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:paddingEnd="5dp"
                        android:text="GamerTag"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <!--
                <circle.CircularImageView
                    android:id="@+id/imgage_one"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>

                    -->

                <RelativeLayout
                    android:id="@+id/inner_container_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/skill_rating_II"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF4081"
                        android:textAlignment="viewEnd"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="60dp"
                        android:paddingEnd="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Skill Rating"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />


                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentBottom="true"
                        android:background="#000000"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="DIV"
                            android:textSize="10sp"
                            android:textColor="#ffffff"

                            />

                        <TextView
                            android:id="@+id/div_II"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="05"
                            android:textSize="30sp"
                            android:textColor="#ffffff"

                            />




                    </RelativeLayout>

                </RelativeLayout>



            </RelativeLayout>

            <TextView
                android:id="@+id/match_team_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:background="#FFFDE7"
                android:elevation="10dp"
                android:gravity="center"
                android:text="team 2"
                android:layout_below="@id/container_two"
                />


    </LinearLayout>




</RelativeLayout>